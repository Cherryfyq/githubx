<Application
    x:Class="GithubX.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubX.UWP"
    xmlns:media="using:Windows.UI.Xaml.Media"
    RequestedTheme="Light">
    <Application.Resources>
        <Color x:Key="AcrylicBrushTintColor1">#eee</Color>
        <Color x:Key="AcrylicBrushFallbackColor1">#eee</Color>
        <media:AcrylicBrush x:Key="HeaderAcrylic" 
                                        BackgroundSource="HostBackdrop" 
                                        TintOpacity="0.8" 
                                        TintColor="#ccc" 
                                        FallbackColor="#ccc"/>

        <media:AcrylicBrush x:Key="DialogBoxAcrylicBrush" 
                            BackgroundSource="Backdrop" 
                            TintOpacity="0.2" 
                            TintColor="#55FFFFFF" 
                            FallbackColor="#FFF" />

    </Application.Resources>

</Application>
