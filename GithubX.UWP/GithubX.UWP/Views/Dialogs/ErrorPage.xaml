<Page
    x:Class="GithubX.UWP.Views.ErrorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GithubX.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <MediaElement Source="ms-appx:///Assets/Video/err.mp4" 
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      AutoPlay="True" IsMuted="True"
                      Opacity="0.4"/>
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock x:Name="msgLabel" 
                   Text="Connection Lost" 
                   FontSize="20"
                   FontWeight="SemiLight"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
            <TextBlock Text="ERROR!!!" FontSize="42"
                HorizontalAlignment="Center"
                   FontWeight="Light"/>
            <Button Content="Go Back" 
                    Click="Button_Click"
                    HorizontalAlignment="Center"
                    Width="136"
                    Margin="0 26"/>
        </StackPanel>

    </Grid>
</Page>
